
@using TSOps.Models
@model TagModel

@using (Html.BeginForm("CreateNewTag", "TagCreator", FormMethod.Post))
{
    <span>Enter a new tagname: </span> @Html.TextBoxFor(m => m.newtag)
    <input id="Submit" type="submit" value="Create" />
}

<p>@ViewBag.Message</p>
<br />

@using (Html.BeginForm("SendData", "TagCreator", FormMethod.Post))
{
    <span> Write a new snapshot value for this tag: </span>@Html.TextBoxFor(m => m.snapshot)
    
    @Html.HiddenFor(m => m.newtag) // passing the newtagname as a hidden parameter in the form
    <input id="Submit" type="submit" value="Send Value" />
}
<p>@ViewBag.Message2</p>


@using (Html.BeginForm("GetTagInfo", "TagCreator", FormMethod.Post))
{
    
    @Html.HiddenFor(m => m.newtag) // passing the newtagname as a hidden parameter in the form
    <input id="Submit" type="submit" value="Read Snapshot" />
}
<p>@ViewBag.Message3</p>
